DeclFuncOpt
DeclFuncOpt = 'entryPoint' DeclFunc | DeclFunc
DeclFunc = 'function' 'id' 'opParen' 'clParen' 'isType' Type Body | 'function' 'id' 'opParen' ParamDeclList 'clParen' 'isType' Type Body | 'function' 'id' 'opParen' 'clParen' Body | 'function' 'id' 'opParen' ParamDeclList 'clParen' Body

ParamDeclList = 'id' 'isType' Type 'comma' ParamDeclList | 'id' 'isType' Type
ParamList = Literal 'comma' ParamList | Literal

Literal = 'bool' | 'int' | 'real' | 'scynot' | 'char' | 'string'

Type = 'typeBool' | 'typeInt' | 'typeReal' | 'typeChar' | 'typeString' | 'typeArray'

Body = 'opBraces' Statements 'clBraces' | 'opBraces' 'clBraces'

Statements = Statement Statements | Statement
Statement = Func | 'returnFun' Literal | If

If = 'ifSel' 'opParen' BoolExp 'clParen' Body | 'ifSel' 'opParen' BoolExp 'clParen' Body ElIf
ElIfAux = 'elseSel' 'ifSel' ElIf | 'elifSel' ElIf
ElIf = Body 'elseSel' Body | Body

BoolExp = BoolExp logicOr BoolAnd | BoolFac
BoolAnd = BoolAnd logicAnd BoolFac
BoolFac = AritExp 'relational' ArtiExp | AritExp | 'opParen' BoolExp 'clParen'

AritExp = AritExp 'plus' AritMult | AritExp 'minus' AritMult | AritFac
AritMult = AritMult 'mult' AritPow
AritPow = AritFac 'exp' AritPow
AritFac = 'int' | 'real' | 'scynot' | 'char' | 'bool' | 'opParen' 'AritExp' 'clParen'

Func = 'id' 'opParen' ParamList 'clParen'
